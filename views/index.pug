extends layout.pug

block content
  article.grid-container.portfolio-intro
    div

      h1 Select Projects

      p.lead.text-light
        | As a student at Web App Development developed this online portfolio

  article.grid-container.portfolio-index

    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3
      each x in projects
        .cell
          a(href= '/projects/' + x.id)
            img.thumbnail(src='' + x.image_urls[0])
            h5 #{x.project_name}
